<h1>Pages</h1>
<ul>
  <% @pages.each do |page| %>
    <li>
      <%= page.title %>
      <%= link_to 'View', resource_path(page) %> |
      <%= link_to 'Edit', edit_resource_path(page) %> |
      <%= link_to 'Delete', resource_path(page), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>

<br />

<%= link_to "New Page &raquo;".html_safe, new_resource_path, class: 'btn btn-primary' %>
